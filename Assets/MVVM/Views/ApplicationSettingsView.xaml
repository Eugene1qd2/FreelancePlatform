<UserControl x:Class="FreelancePlatform.Assets.MVVM.Views.ApplicationSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FreelancePlatform.Assets.MVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="825" d:DesignWidth="840"
             BorderThickness="0">
    <Grid>
        <StackPanel Margin="100">
            <Button  Width="200" Height="60" Content="Стандартная тема" FontSize="20"  Style="{StaticResource WhiteButton}" Margin="10" Click="Button_Click"/>
            <Button  Width="200" Height="60" Content="Красная тема" FontSize="20"  Style="{StaticResource WhiteButton}" Margin="10" Click="Button_Click_1"/>
            <Button  Width="200" Height="60" Content="Синяя тема" FontSize="20"  Style="{StaticResource WhiteButton}" Margin="10" Click="Button_Click_2"/>
            <Button  Width="200" Height="60" Content="Желтая тема" FontSize="20"  Style="{StaticResource WhiteButton}" Margin="10" Click="Button_Click_3"/>
        </StackPanel>
    </Grid>
</UserControl>
